{{! This is the post loop - each post will be output using this markup }}
<ul class="article-list">
    {{#foreach posts}}
    <li class="article-list-item">
        <div class="card paper-shadow-1" {{#if image}} style="background-image: url({{image}}){{else}}no-cover{{/if}}">
            <article class="{{post_class}}">
                <header class="post-header">
                    <h2 class="post-title"><a href="{{url}}" class="post-title">{{{title}}}</a></h2>
                </header>
                <section class="post-excerpt">
                    <p>{{excerpt words="50"}} <a class="read-more" href="{{url}}">&raquo;</a></p>
                </section>
                <footer class="post-meta">
                    <!-- {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="Author image" nopin="nopin" />{{/if}}
                    {{author}} -->
                    {{tags prefix="In "}}
                    <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
                </footer>
            </article>
        </div>
    </li>
    {{/foreach}}
</ul>
