{{#foreach posts}}
<article class="front-page-article {{post_class}}">
  <div class="article-info"><img src="{{author.image}}" class="author-image img-circle"/>{{#foreach tags}}<br/><a href="url" class="tag">#{{name}}</a>{{/foreach}}
    <time datetime="{{date format='YYYY-MM-DD'}}" class="post-date">{{date format="DD MMMM YYYY"}}</time>
  </div>
  <div class="article-content">
    <header class="post-header">
      <h1 class="post-title"> <a href="{{url}}">{{{title}}}</a></h1>
    </header>
    <section class="post-excerpt">
      <p>{{excerpt words="150"}}</p>
    </section>
  </div>
</article>{{/foreach}}